<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:textAlignment="center"
    android:padding="10dp"
    tools:context=".Activity.PlayMusicActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/headMusicName"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Name"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/headMusicName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/musicPlayImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/mc03_imagedragons"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/runTime"
        android:layout_marginTop="30dp"
        android:layout_below="@id/musicPlayImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/totalTime"
        android:layout_marginTop="30dp"
        android:layout_below="@id/musicPlayImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>
    <ImageButton
        android:layout_below="@id/seekBar"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/playPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:background="@null"/>
    <ImageButton
        android:layout_below="@id/seekBar"
        android:layout_marginTop="50dp"
        android:id="@+id/preButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pre"
        android:background="@null"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/playPauseButton"/>
    <ImageButton
        android:layout_below="@id/seekBar"
        android:layout_marginTop="50dp"
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/playPauseButton"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/runTime"
        android:layout_marginTop="5dp"
        android:progressTint="#FFFFFF"
        android:thumbTint="#FFFFFF"/>
    <ImageButton
        android:id="@+id/replay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_replay_1"
        android:background="@null"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/nextButton"/>
    <ImageButton
        android:id="@+id/fav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border"
        android:background="@null"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/preButton"/>

</RelativeLayout>